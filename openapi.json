{
    "openapi": "3.1.0",
    "info": {
        "title": "Laravel",
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http:\/\/localhost\/api"
        }
    ],
    "paths": {
        "\/comments": {
            "get": {
                "operationId": "comment.index",
                "tags": [
                    "Comment"
                ],
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "user_name",
                                "email",
                                "created_at"
                            ]
                        }
                    },
                    {
                        "name": "direction",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "`CommentListResource`",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "$ref": "#\/components\/schemas\/CommentListResource"
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#\/components\/responses\/ValidationException"
                    }
                }
            },
            "post": {
                "operationId": "comment.store",
                "tags": [
                    "Comment"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart\/form-data": {
                            "schema": {
                                "$ref": "#\/components\/schemas\/CommentStoreRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "`CommentCreatedResource`",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "$ref": "#\/components\/schemas\/CommentCreatedResource"
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#\/components\/responses\/ValidationException"
                    }
                }
            }
        },
        "\/comments\/search": {
            "get": {
                "operationId": "comment.search",
                "tags": [
                    "Comment"
                ],
                "parameters": [
                    {
                        "name": "q",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "minLength": 2,
                            "maxLength": 200
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "schema": {
                            "type": [
                                "integer",
                                "null"
                            ],
                            "minimum": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "schema": {
                            "type": [
                                "integer",
                                "null"
                            ],
                            "minimum": 1,
                            "maximum": 50
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "anyOf": [
                                        {
                                            "type": "object",
                                            "properties": {
                                                "items": {
                                                    "type": "array",
                                                    "items": {}
                                                },
                                                "meta": {
                                                    "type": "object",
                                                    "properties": {
                                                        "q": {
                                                            "type": "string"
                                                        },
                                                        "current_page": {
                                                            "type": [
                                                                "object",
                                                                "null"
                                                            ]
                                                        },
                                                        "per_page": {
                                                            "type": [
                                                                "object",
                                                                "null"
                                                            ]
                                                        },
                                                        "total": {
                                                            "type": "integer"
                                                        },
                                                        "last_page": {
                                                            "type": "integer"
                                                        }
                                                    },
                                                    "required": [
                                                        "q",
                                                        "current_page",
                                                        "per_page",
                                                        "total",
                                                        "last_page"
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "items",
                                                "meta"
                                            ]
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "error": {
                                                    "type": "boolean"
                                                },
                                                "status": {
                                                    "type": "string"
                                                },
                                                "body": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "error",
                                                "status",
                                                "body"
                                            ]
                                        },
                                        {
                                            "type": "object",
                                            "properties": {
                                                "items": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    },
                                                    "minItems": 0,
                                                    "maxItems": 0,
                                                    "additionalItems": false
                                                },
                                                "meta": {
                                                    "type": "object",
                                                    "properties": {
                                                        "q": {
                                                            "type": "string"
                                                        },
                                                        "current_page": {
                                                            "type": "integer",
                                                            "enum": [
                                                                1
                                                            ]
                                                        },
                                                        "per_page": {
                                                            "type": "integer"
                                                        },
                                                        "total": {
                                                            "type": "integer",
                                                            "enum": [
                                                                0
                                                            ]
                                                        },
                                                        "last_page": {
                                                            "type": "integer",
                                                            "enum": [
                                                                0
                                                            ]
                                                        }
                                                    },
                                                    "required": [
                                                        "q",
                                                        "current_page",
                                                        "per_page",
                                                        "total",
                                                        "last_page"
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "items",
                                                "meta"
                                            ]
                                        }
                                    ]
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#\/components\/responses\/ValidationException"
                    }
                }
            }
        },
        "\/comments\/preview": {
            "post": {
                "operationId": "comment.preview",
                "tags": [
                    "Comment"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application\/json": {
                            "schema": {
                                "$ref": "#\/components\/schemas\/CommentPreviewRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "html": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "html"
                                    ]
                                }
                            }
                        }
                    },
                    "422": {
                        "$ref": "#\/components\/responses\/ValidationException"
                    }
                }
            }
        },
        "\/captcha": {
            "get": {
                "operationId": "comment.captcha",
                "tags": [
                    "Comment"
                ],
                "responses": {
                    "200": {
                        "description": "",
                        "content": {
                            "application\/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "challenge": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "token",
                                        "challenge"
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CommentCreatedResource": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    }
                },
                "required": [
                    "id"
                ],
                "title": "CommentCreatedResource"
            },
            "CommentListResource": {
                "type": "object",
                "properties": {
                    "roots": {
                        "type": "array",
                        "items": {
                            "$ref": "#\/components\/schemas\/CommentResource"
                        }
                    },
                    "descendants_flat": {
                        "type": "array",
                        "items": {
                            "$ref": "#\/components\/schemas\/CommentResource"
                        }
                    },
                    "meta": {
                        "type": "object",
                        "properties": {
                            "current_page": {
                                "type": "string"
                            },
                            "per_page": {
                                "type": "string"
                            },
                            "total": {
                                "type": "string"
                            },
                            "last_page": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "current_page",
                            "per_page",
                            "total",
                            "last_page"
                        ]
                    }
                },
                "required": [
                    "roots",
                    "descendants_flat",
                    "meta"
                ],
                "title": "CommentListResource"
            },
            "CommentPreviewRequest": {
                "type": "object",
                "properties": {
                    "text": {
                        "type": "string",
                        "maxLength": 5000
                    }
                },
                "required": [
                    "text"
                ],
                "title": "CommentPreviewRequest"
            },
            "CommentResource": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "parent_id": {
                        "type": [
                            "integer",
                            "null"
                        ]
                    },
                    "user_name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "home_page": {
                        "type": [
                            "string",
                            "null"
                        ]
                    },
                    "text_html": {
                        "type": "string"
                    },
                    "attachment": {
                        "type": [
                            "object",
                            "null"
                        ],
                        "properties": {
                            "url": {
                                "type": "string"
                            },
                            "original_name": {
                                "type": [
                                    "string",
                                    "null"
                                ]
                            },
                            "type": {
                                "type": [
                                    "string",
                                    "null"
                                ]
                            }
                        },
                        "required": [
                            "url",
                            "original_name",
                            "type"
                        ]
                    },
                    "created_at": {
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "parent_id",
                    "user_name",
                    "email",
                    "home_page",
                    "text_html",
                    "attachment",
                    "created_at"
                ],
                "title": "CommentResource"
            },
            "CommentStoreRequest": {
                "type": "object",
                "properties": {
                    "parent_id": {
                        "type": [
                            "integer",
                            "null"
                        ]
                    },
                    "user_name": {
                        "type": "string",
                        "maxLength": 70
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "maxLength": 255
                    },
                    "home_page": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "uri",
                        "maxLength": 255
                    },
                    "captcha_token": {
                        "type": "string",
                        "maxLength": 64
                    },
                    "captcha_answer": {
                        "type": "string",
                        "maxLength": 20
                    },
                    "text": {
                        "type": "string",
                        "maxLength": 5000
                    },
                    "file": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "format": "binary",
                        "contentMediaType": "application\/octet-stream"
                    }
                },
                "required": [
                    "user_name",
                    "email",
                    "captcha_token",
                    "captcha_answer",
                    "text"
                ],
                "title": "CommentStoreRequest"
            }
        },
        "responses": {
            "ValidationException": {
                "description": "Validation error",
                "content": {
                    "application\/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "description": "Errors overview."
                                },
                                "errors": {
                                    "type": "object",
                                    "description": "A detailed description of each field that failed validation.",
                                    "additionalProperties": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "required": [
                                "message",
                                "errors"
                            ]
                        }
                    }
                }
            }
        }
    }
}